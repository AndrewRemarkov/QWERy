$main_dark = #000;
$main_light = #fff;
$main_highlite = #FBD784;
$main_buttons = #FFA343;
$main_border = rgba($main_light, 30%);
$border_radius = 8px;
$main_shift = 3.55rem;

html, body {
  font: 18px / 1.7 'Open Sans', sans-serif;
  color: $main_light;
}

body {
  background: $main_dark url('/images/cover.jpg') no-repeat center top;
}

a {
  color: $main_highlite;
  transition: opacity 0.3s;
  opacity: 1;

  &:hover, &:active {
    opacity: 0.7;
  }
}

.container {
  padding: 0 $main_shift $main_shift;
  max-width: 1460px;
  margin: 0 auto;

  &_small {
    max-width: 934px;
    padding: 0 2.75rem 2.5rem;
    margin: 0 auto;
  }

  p {
    margin-bottom: 1.3em;
  }
}

.section {
  margin-bottom: 14rem;
}

/* Main styles */
.cover-space {
  padding-bottom: 105%;
}

.header {
  position: absolute;
  top: 0;
  width: 100%;

  &__content {
    display: grid;
    grid-template-columns: auto 1fr auto;
    padding: $main_shift;
    align-items: center;
  }

  &_center {
    display: flex;
    justify-content: center;
  }
}

.logo {
  color: $main_light;
  text-decoration: none;
  letter-spacing: 1%;

  &:visited {
    color: $main_light;
  }

  &__title {
    font-size: 1.3rem;
    font-weight: 700;
  }
}

.main-nav {
  &__list {
    display: flex;
  }

  &__link {
    color: $main_light;
    text-decoration: none;
    padding: 1.8rem 1.38rem;
    display: inline-block;

    &:visited {
      color: $main_light;
    }
  }
}

.search {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 10rem; // или ширина наибольшего возможного состояния input
  position: relative;

  &__icon {
    width: 1rem;
    height: 1rem;
    background: url('/images/icons/search.svg') no-repeat center center;
    background-size: content;
    cursor: pointer;
    padding-right: 0.5rem;
  }

  &__form {
    position: absolute;
    right: 0;
    background: none;
    border: none;
    transition: width 0.3s;
    width: 3.4rem;
    font: 0.9rem / 1 'Open Sans', sans-serif;
    padding: 0.2rem 0.5rem;
    cursor: pointer;

    &::placeholder {
      color: $main_light;
    }

    &:focus {
      border: none;
      border-radius: 5px;
      outline: none;
      width: 10rem;
      background: $main_light;

      &::placeholder {
        color: $main_dark;
        opacity: 1;
      }
    }
  }
}

.section {
  &__main {
    display: flex;
    align-items: center;
    flex-direction: column;
    position: absolute;
    left: $main_shift;
    right: $main_shift;
    top: 14vw;
  }
}

.main-title {
  font-size: 1rem;
  margin-bottom: 6.2em;

  &__summary {
    color: lighten($main_highlite, 5);
    text-transform: uppercase;
    letter-spacing: 0.34em;
    display: flex;
    align-items: center;
    font-weight: 700;
    margin-bottom: 1.5em;

    &::before {
      content: '';
      display: block;
      width: 4em;
      height: 3px;
      margin-right: 1.5em;
      background: lighten($main_highlite, 5);
    }
  }

  &__text {
    color: $main_light;
    font-size: 5.4em;
    font-weight: 700;
    line-height: 1.1;

    &_regular {
      display: block;
      font-size: 0.9em;
      font-weight: 400;
    }
  }

  &_small {
    font-size: 1rem;
    margin-bottom: 1.8em;

    .main-title__summary {
      color: $main_highlite;

      &::before {
        background: $main_highlite;
      }
    }

    .main-title__text {
      font-size: 3.4em;
      line-height: 1.4;
    }
  }

  &_centered {
    text-align: center;

    .main-title__summary {
      justify-content: center;

      &::after {
        content: '';
        display: block;
        width: 4em;
        height: 2px;
        margin-left: calc(1.5em - 0.36em);
        background: $main_highlite;
      }
    }
  }
}

.soc1al-networks {
  position: absolute;
  left: 0;
  top: 4rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  row-gap: 1rem;

  &__title {
    writing-mode: vertical-rl;
    margin-bottom: 1.3rem;
    color: $main_light;
    font-size: 18px;
    font-weight: 600;
  }

  &__item {
    margin-bottom: 1.1rem;
  }

  &__link {
    opacity: 1;
    transition: opacity 0.3s;
  }
}

.scroll-down {
  display: flex;
  align-items: center;
  cursor: pointer;
  opacity: 1;
  font-size: 1rem;
  font-weight: 600;
  color: $main_light;

  &:hover {
    opacity: 0.7;
  }

  &__icon {
    margin: 0.2em 0 0 0.5em;
  }
}

.section-cols {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-col {
  &__image {
    width: 40%;
  }

  &__content {
    width: 44%;
  }
}

.section-border {
  padding-bottom: 3rem;
  border-bottom: 1px solid $main_border;
  margin-bottom: 3rem;
}

/* Gallery */
.gallery {
  &__slide {
    position: relative;
    width: 100%;
    padding-bottom: 67%;
    background-size: cover;
  }

  &__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    text-align: center;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0) 100%);
  }
}

/* Pre-footer */
.start {
  display: flex;
  align-items: center;
  justify-content: space-between;

  &__title {
    font-size: 2.66rem;
    font-weight: 700;
    margin-right: 3rem;

    a {
      color: $main_light;
      cursor: pointer;
      text-decoration: none;
    }
  }

  &__description {
    font-size: 1.22rem;
    margin-right: 3rem;
  }

  &__content {
    display: flex;
    align-items: center;
  }
}

/* Footer */
.footer {
  &__content {
    display: flex;
    justify-content: space-between;
    margin-bottom: 7rem;

    .subscribe {
      width: 27%;

      &__title {
        font-size: 2rem;
        font-weight: bold;
        line-height: 1.4;
        margin-bottom: 1.38em;
      }
    }

    .email {
      width: 100%;
      display: grid;
      grid-template-columns: 1fr auto;
      border-bottom: 1px solid $main_border;

      &__form {
        background: none;
        border: none;
        font: 0.83rem / 1 'Open Sans', sans-serif;
        padding: 1.1rem 0.77rem 1.77rem;
        color: $main_light;

        &::placeholder {
          color: $main_border;
          opacity: 1;
        }

        &:focus {
          border: none;
          outline: none;
        }
      }

      &__button {
        position: relative;
        padding: 0;
        height: 100%;
        width: 3.55rem;
        border-radius: $border_radius $border_radius 0 0;
        display: flex;
        align-items: center;
        justify-content: center;
      }
    }

    .menu {
      &__title {
        color: $main_highlite;
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 0.6em;
      }

      &__item {
        margin-bottom: 0.8rem;
      }

      &__link {
        color: $main_light;
        text-decoration: none;

        &:hover, &:visited, &:active {
          color: $main_light;
        }
      }
    }
  }

  &__bottom {
    display: flex;
    justify-content: space-between;
    padding: 0 2.22rem 2.4rem;

    .soc1al-horisontal {
      display: flex;
      font-size: 1.3rem;

      &__item {
        display: inline-block;
        margin-left: 2rem;
      }

      &__link {
        display: inline-block;
        opacity: 1;
        transition: opacity 0.3s;

        &:hover {
          opacity: 0.7;
        }
      }
    }
  }

  &__terms {
  }

  &__link {
    color: $main_light;
    text-decoration: none;
    font-size: 0.833rem;
    display: inline-block;
    margin-right: 4.5rem;

    &:hover, &:visited {
      color: $main_light;
    }

    &:last-child {
      margin: 0;
    }
  }
}

/* Links */
.arrow-link {
  display: flex;
  align-items: center;
  text-decoration: none;
  flex-wrap: nowrap;

  &__icon {
    margin: 0.1rem 0 0 0.4rem;
  }

  &_centered {
    justify-content: center;
  }
}

/* Buttons */
.button {
  border: none;
  background-color: $main_buttons;
  font: 700 0.9rem / 1 'Open Sans', sans-serif;
  border-radius: $border_radius;
  padding: 1.3rem 4.16rem 1.3rem 3.88rem;
  cursor: pointer;
  transition: background 0.3s;

  &:hover {
    background: $main_highlite;
  }
}

/* Icons */
.icon__instagram {
  width: 1.3em;
  height: 1.3em;
  background: url('/images/icons/instagram.svg');
  background-size: cover;
}

.icon__twitter {
  width: 1.3em;
  height: 1.3em;
  background: url('/images/icons/twitter.svg');
  background-size: cover;
}

.icon__facebook {
  width: 1.3em;
  height: 1.3em;
  background: url('/images/icons/facebook.svg');
  background-size: cover;
}

.icon__arrow_downward {
  width: 1em;
  height: 1.4em;
  background: url('/images/icons/arrow_downward.svg') no-repeat center center;
  background-size: contain;
}

.icon__arrow_rightward {
  width: 1.6em;
  height: 1.2em;
  background: url('/images/icons/arrow_rightward.svg') no-repeat center center;
  background-size: contain;
}

.icon-arriw_right {
  width: 1.6em;
  height: 1.2em;
  background: url('/images/icons/arrow_right.svg') no-repeat center center;
  background-size: contain;
}

/* Media Queries */
@media screen and (max-width: 1790px) {
  html, body {
    font-size: 16px;
  }

  .container {
    max-width: 1200px;
  }

  .section-col {
    &__image {
      width: 40%;
    }

    &__content {
      width: 50%;
    }
  }
}

@media screen and (max-width: 1550px) {
  html, body {
    font-size: 14px;
  }
}

@media screen and (max-width: 1380px) {
  .section-col {
    &__image {
      width: 43%;
    }

    &__content {
      width: 50%;
    }
  }
}

@media screen and (max-width: 1310px) {
  .main-title {
    font-size: 0.9rem;
  }
}